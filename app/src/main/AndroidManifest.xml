<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Main_Application.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".Doctor_summary"
            android:exported="false" />
        <activity
            android:name=".Doctor_prescription"
            android:exported="false" />
        <activity
            android:name=".Doctor_ledger"
            android:exported="false" />
        <activity
            android:name=".Doctor_appointments"
            android:exported="false" />
        <activity
            android:name=".Doctor_allergies"
            android:exported="false" />
        <activity
            android:name=".DoctorDashboard"
            android:exported="false" />
        <activity
            android:name=".Summary"
            android:exported="false" />
        <activity
            android:name=".Allergies"
            android:exported="false" />
        <activity
            android:name=".Prescriptions"
            android:exported="false"
            android:label="@string/prescription" />
        <activity
            android:name=".Appointments"
            android:exported="false"
            android:label="@string/appointments">
            <meta-data
                android:name="android.app.lib_name"
                android:value="@string/appointments" />
        </activity>
        <activity
            android:name=".Ledger"
            android:exported="false"
            android:label="@string/billing">
            <meta-data
                android:name="android.app.lib_name"
                android:value="@string/billing" />
        </activity>
        <activity
            android:name=".MainPatientDashboard"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:label="@string/dashboard_title"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login_main">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>