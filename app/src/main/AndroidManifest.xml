<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Main_Application"
        tools:targetApi="31">
        <activity
            android:name=".Summary"
            android:exported="false" />
        <activity
            android:name=".Allergies"
            android:exported="false" />
        <activity
            android:name=".Prescriptions"
            android:exported="false"
            android:label="@string/prescription" />
        <activity
            android:name=".Appointments"
            android:exported="false"
            android:label="@string/appointments">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".Ledger"
            android:exported="false"
            android:label="@string/billing"
            android:theme="@style/Theme.Main_Application.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainPatientDashboard"
            android:exported="false"
            android:label="@string/dashboard_title">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:enableOnBackInvokedCallback="true"
            android:exported="true"
            android:label="@string/login_text">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>